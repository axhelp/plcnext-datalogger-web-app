{
    "name": "plcnext-datalogger-web-app-server",
    "version": "0.1.0",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "start:dev": "tsc-watch --onSuccess 'nodemon dist/server.js'",
        "build": "npm run build-ts",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "sqlite": "^4.0.7",
        "sqlite3": "^4.1.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.3",
        "@types/compression": "^1.0.1",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.7.8",
        "@types/sqlite3": "^3.1.6",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "chai": "^4.2.0",
        "eslint": "^6.4.0",
        "jest": "^24.9.0",
        "nodemon": "^1.19.2",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.4.1",
        "tsc-watch": "^4.2.3",
        "typescript": "^3.6.3"
    }
}
